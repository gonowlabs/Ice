%h1=t(:users)
%table
  %tr
    %th=t(:name)
    %th=t(:login)
    %th=t(:email)
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      %td= h user.name
      %td= h user.login
      %td= h user.email
      %td= link_to t(:show), user
      %td= link_to t(:edit), edit_user_path(user)
      %td= link_to t(:destroy), user_path(user), :confirm => t(:sure)+'?', :method => :delete
= link_to t(:new_user), new_user_path
