%h1 Listing users
%table
  %tr
    %th Name
    %th Login
    %th E-mail
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      %td= h user.name
      %td= h user.login
      %td= h user.email
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', :method => :delete
= link_to I18n.t(:new_user), new_user_path
